        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

        <include layout="@layout/layout_progress_search_item" />

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>