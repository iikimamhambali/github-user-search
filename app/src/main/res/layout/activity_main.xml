<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.android.githubusersearch.ui.customview.SearchBoxCircularView
        android:id="@+id/svUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.android.githubusersearch.base.BaseRecyclerview
        android:id="@+id/rvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/svUser"
        app:layout_constraintStart_toStartOf="@+id/svUser"
        app:layout_constraintTop_toBottomOf="@+id/svUser"
        tools:itemCount="5"
        tools:listitem="@layout/layout_search_item" />

</androidx.constraintlayout.widget.ConstraintLayout>