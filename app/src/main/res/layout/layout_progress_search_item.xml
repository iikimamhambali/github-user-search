<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sectionContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAvatarUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_shimmer_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearchContent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/background_shimmer_square"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarUser"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarUser"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarUser" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="@+id/tvSearchContent"
        app:layout_constraintStart_toStartOf="@+id/ivAvatarUser"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatarUser" />

</androidx.constraintlayout.widget.ConstraintLayout>